@model PetShop.Models.Store

@{
    ViewBag.Title = "Create";
}

<div class="main-container">
    <div class="center-container">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Store</h4>
            <hr />
            <p class="error">
                @Html.ValidationSummary(true)
            </p>
            <div class="form-group">
                <div class="form-group">
                    <label for="Street">Street</label>
                    <input type="text" name="Street" id="Street" />
                </div>
            </div>

            <div class="form-group">
                <label for="city">City</label>
                <input type="text" list="cities" name="city" id="city" />
                <datalist id="cities" style="max-height: 200px">
                    @foreach (var item in ViewBag.Cities)
                    {
                        <option>@String.Format(item.Name)</option>
                    }
                </datalist>
            </div>

            <div class="form-group">
                <label for="region">Region</label>
                <input type="text" list="regions" name="region" id="region" />
                <datalist id="regions" style="max-height: 200px">
                    @foreach (var item in ViewBag.Regions)
                    {
                        <option>@String.Format(item.Name)</option>
                    }
                </datalist>
            </div>

            <div class="form-group">

                <div class="control-container">
                    <input type="submit" value="Create" class="submit" />
                </div>

                <div class="control-container">
                    @Html.ActionLink("Back to List", "Index", "Employees", new { }, new { @class = "submit" })
                </div>

            </div>

        </div>
        }

    </div>
</div>
