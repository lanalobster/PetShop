@model PetShop.Models.ViewModels.PurchaseViewModel

<div class="modal-content">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal main-container">
        <h4>Store</h4>
        <hr />
        <div class="form-group">
            <select name="storeId">
                @foreach (var store in Model.Stores)
                {
                    <option value=@store.StoreId>@store.Street</option>
                }
            </select>
        </div>

        <div class="buttons-vertical">

            <div class="control-container">
                <input type="submit" value="OK" class="submit" id="submitButton" />
            </div>

            <div class="control-container">
                @Html.ActionLink("Cancel", "Create", new { }, new { @class = "submit" })
            </div>

        </div>
    </div>
    }
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}




