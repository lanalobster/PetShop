@model PetShop.Models.ViewModels.PurchaseViewModel

<div class="modal-content">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal main-container">
        <h4>Item</h4>
        <p class="error">@String.Join(" ", Model.ItemErrorMessages)</p>
        <div class="form-group">
            <label for="item">Item</label>
            <input type="text" list="items" name="item" id="item" />
            <datalist id="items" style="max-height: 200px">
                @foreach (var item in Model.ItemsInStore)
                {
                    <option>@String.Format(item.Item.Name)</option>
                }
            </datalist>
            <label for="quantity">Quantity</label>
            <input type="number" min="0" name="quantity" id="quantity" />
        </div>

        <div class="buttons-vertical">
                <div class="control-container">
                    <input type="submit" value="OK" class="submit" id="submitButton" />
                </div>
                <div class="control-container">
                    @Html.ActionLink("Cancel", "Create", new { }, new { @class = "submit" })
                </div>
        </div>
    </div>
    }
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
