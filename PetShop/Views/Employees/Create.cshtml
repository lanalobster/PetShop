@model PetShop.Models.Employee


<div class="center">
    <h1>Register New Employee</h1>
</div>

<div class="main-container">
    <div class="center-container">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            <p class="error">
                @Html.ValidationSummary(true)
            </p>
            <div class="form-group">
                <label for="Name">Name</label>
                <input type="text" name="Name" id="Name" />
            </div>

            <div class="form-group">
                <div class="form-group">
                    <label for="Surname">Surname</label>
                    <input type="text" name="Surname" id="Surname" />
                </div>
            </div>

            <div class="form-group">
                <label for="DateOfBirth">DateOfBirth</label>
                <div class="col-md-10">
                    <input type="date" id="date" class="picker" name="DateOfBirth"
                           value="2000-01-01"
                           min="1920-01-01" max="2003-01-01">
                </div>
            </div>

            <div class="form-group">
                <label for="EmailAddress">EmailAddress</label>
                <input type="text" name="EmailAddress" id="EmailAddress" />
            </div>
            <div class="form-group">
                <label for="PhoneNumber">PhoneNumber</label>
                <input type="text" name="PhoneNumber" id="PhoneNumber" />
            </div>


            <div class="form-group">
                <label for="TitleId">Title</label>
                <div>
                    @Html.DropDownList("TitleId", null, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <label for="Salary">Salary</label>
                <input type="number" min="0" name="Salary" id="Salary" />
            </div>

            <div class="form-group">

                <div class="control-container">
                    <input type="submit" value="Create" class="submit" />
                </div>

                <div class="control-container">
                    @Html.ActionLink("Back to List", "Index", "Employees", new { }, new { @class = "submit" })
                </div>

            </div>

        </div>
        }

    </div>
</div>
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
