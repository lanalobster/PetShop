@model PetShop.Models.ViewModels.OrderViewModel

<div class="modal-content">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Item</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <p>@String.Join(" ", Model.ItemErrorMessages)</p>
            <div class="form-group">
                <label for="itemName">Item</label>
                <input list="items" name="itemName" id="itemName" />
                <datalist id="items" style="max-height: 200px">
                    @foreach (var item in Model.Items)
                    {
                        <option>@String.Format(item.Name)</option>
                    }
                </datalist>
                <label for="quantity">Quantity</label>
                <input name="quantity" id="quantity" />

                <label for="price">Price</label>
                <input name="price" id="price" />

            </div>

            <div class="form-group">
                <div>
                    @Html.ActionLink("Cancel", "Create")
                </div>

                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Add" class="btn btn-default" id="submitButton" />
                </div>
            </div>
        </div>
    }
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

