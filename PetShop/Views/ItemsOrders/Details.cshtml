@model PetShop.Models.ViewModels.OrderViewModel

<h2>Order</h2>

<p>CreatedOn: @Model.ItemsOrder.CreatedOn</p>
@{
    var status = ViewBag.Status;
    var stockedItem = @Model.StockedItems.FirstOrDefault();
    var storeName = @Model.ItemsOrder.Store?.Street;
}
<p>Store: @storeName</p>
<p>Supplier: @String.Format("{0} {1}", Model.ItemsOrder.Supplier.Name, Model.ItemsOrder.Supplier.Surname)</p>
<p>Status: @status</p>
<p>Ordered by: @String.Format("{0} {1}", Model.ItemsOrder.Employee.Name, Model.ItemsOrder.Employee.Surname)</p>
@if (status == "Completed")
{
    <p>Stored on: @stockedItem.CreatedOn</p>
    <p>Stored by: @String.Format("{0} {1}", stockedItem?.Employee.Name, stockedItem?.Employee.Surname)</p>
}


<table class="table">
    <tr>
        <th>
            Item
        </th>
        <th>
            Ordered Quantity
        </th>
        <th>
            Stocked Quantity
        </th>
        <th>
            Price (Per Item)
        </th>
        <th>
            Subtotal
        </th>
    </tr>
    @foreach (var itemInOrder in Model.ItemsOrder.ItemInOrder)
    {
        <tr>
            <td>
                @itemInOrder.Item.Name
            </td>
            <td>
                @itemInOrder.Quantity
            </td>
            <td>
                @{
                    var stockedQuantity = Model.StockedItems.Where(si => si.ItemInOrder == itemInOrder).FirstOrDefault()?.Quantity;
                    var stockedString = stockedQuantity?.ToString() ?? "-";
                }
                @stockedString
                @if (status == "Finishing up")
                {
                    @Ajax.ActionLink("Edit", "EditQuantity", new { itemInOrderId = itemInOrder.ItemInOrderId }, new AjaxOptions { UpdateTargetId = "myModal" }, new { id = "editButton" })
                }
            </td>
            <td>
                @itemInOrder.Price
            </td>
            <td>
                @{
                    double subtotal = itemInOrder.Quantity * (double)(itemInOrder.Price ?? 0);
                }
                @string.Format("{0:0.00}", subtotal)
            </td>
        </tr>
    }
    <tr>
        <td></td>
        <td></td>
        <td></td>
        <td>Total:</td>
        <td>
            @String.Format("{0: 0.00}", Model.GetTotalSum())
        </td>
    </tr>

</table>

<div id="myModal" class="modal">

</div>

@if (status == "Not completed")
{
    @Ajax.ActionLink("Complete order", "Stock", new { }, new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "body-content" });
}

@if (status == "Finishing up")
{
    @Html.ActionLink("OK", "Complete", new { });
}

<div>
    @Html.ActionLink("Close", "Index");
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script>
    var modal = document.getElementById("myModal");
    var btn = document.getElementById("editButton");
    var span = document.getElementsByClassName("close")[0];

    btn.onclick = function () {
        modal.style.display = "block";
    }

    function showConfirmationWindow() {
        var result = confirm("Your changes won't be saved. Are you sure you want to exit?");
        if (result == true) {
            window.location.href = "Index";
        }
    }
</script>
